@using WebApplication7_13.data
@model WebApplication7_13.web.Models.IndexViewModel

<a href="/home/AddPerson" class="btn btn-primary">Add New Person</a>
<br />
<br />
<table class="table table-striped table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
  @foreach(Person p in Model.People)
  {
      <tr>
          <td>@p.FirstName</td>
          <td>@p.LastName</td>
          <td>@p.Age</td>
          <td><a class="btn btn-primary" href="/home/EditPerson?Id=@p.Id">Edit</a></td>
          <td><a class="btn btn-primary" href="/home/DeletePerson?Id=@p.Id">Delete</a></td>
      </tr>
  }
</table>